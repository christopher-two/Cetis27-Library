---
interface Props {
  minimal?: boolean;
}

const { minimal = false } = Astro.props;
---

<button
  class:list={[
    "theme-toggle-btn flex items-center justify-center rounded-2xl text-[var(--m3-sys-on-surface-variant)] hover:bg-[var(--m3-sys-surface-variant)]/30 transition-all active:scale-95 group",
    minimal ? "p-2 w-10 h-10" : "p-3 w-full",
  ]}
  aria-label="Toggle theme"
>
  <div class="relative w-6 h-6">
    <svg
      class="hidden dark:block absolute inset-0 transition-transform duration-500 rotate-90 dark:rotate-0 sun-icon"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><circle cx="12" cy="12" r="5"></circle><line
        x1="12"
        y1="1"
        x2="12"
        y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line
        x1="4.22"
        y1="4.22"
        x2="5.64"
        y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"
      ></line><line x1="1" y1="12" x2="3" y2="12"></line><line
        x1="21"
        y1="12"
        x2="23"
        y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"
      ></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg
    >
    <svg
      class="block dark:hidden absolute inset-0 transition-transform duration-500 rotate-0 dark:-rotate-90 moon-icon"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg
    >
  </div>
</button>

<script>
  const handleToggleClick = () => {
    const element = document.documentElement;
    const isDark = element.classList.contains("dark");
    const nextTheme = isDark ? "light" : "dark";

    element.setAttribute("data-theme", nextTheme);
    if (nextTheme === "dark") {
      element.classList.add("dark");
    } else {
      element.classList.remove("dark");
    }
    localStorage.setItem("theme", nextTheme);
  };

  const setupThemeToggles = () => {
    document.querySelectorAll(".theme-toggle-btn").forEach((btn) => {
      btn.removeEventListener("click", handleToggleClick);
      btn.addEventListener("click", handleToggleClick);
    });
  };

  // Initial setup
  setupThemeToggles();

  // Re-setup on page load (for View Transitions)
  document.addEventListener("astro:page-load", setupThemeToggles);
</script>
