---
interface Props {
  headers: string[];
  class?: string;
  id?: string;
}

const { headers, class: className, id } = Astro.props;
---

<div
  class:list={[
    "w-full overflow-x-auto rounded-[var(--m3-radius-lg)] border border-[var(--m3-sys-light-outline)]/20",
    className,
  ]}
>
  <table id={id} class="w-full text-left border-collapse">
    <thead class="bg-[var(--m3-sys-light-secondary-container)]/50">
      <tr>
        {
          headers.map((header) => (
            <th class="px-6 py-4 text-xs font-semibold text-[var(--m3-sys-light-on-surface-variant)] uppercase tracking-wider">
              {header}
            </th>
          ))
        }
      </tr>
    </thead>
    <tbody
      class="divide-y divide-[var(--m3-sys-light-outline)]/10 text-[var(--m3-sys-on-surface)]"
    >
      <slot />
    </tbody>
  </table>
</div>
