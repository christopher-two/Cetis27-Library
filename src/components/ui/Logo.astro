---
interface Props {
  className?: string;
  size?: "sm" | "md" | "lg" | "xl" | "custom";
  color?: string;
}

const { className = "", size = "md", color = "currentColor" } = Astro.props;

const sizeClasses = {
  sm: "w-6 h-6",
  md: "w-8 h-8",
  lg: "w-12 h-12",
  xl: "w-24 h-24",
  custom: "",
};

const finalClass = `${sizeClasses[size as keyof typeof sizeClasses]} ${className}`;
---

<img
  src="/cetis.svg"
  alt="Logo Cetis 27"
  class={`${finalClass} dark:brightness-0 dark:invert`}
  draggable="false"
/>
