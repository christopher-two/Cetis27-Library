---
import type { Event } from "../../services/firebase/events";

interface Props {
  event: Event;
}

const { event } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("es-MX", {
    day: "numeric",
    month: "short",
    hour: "2-digit",
    minute: "2-digit",
  }).format(date);
};
---

<a href={`/events/${event.id}`} class="block group">
  <article
    class="bg-[var(--m3-sys-surface)] rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-[var(--m3-sys-outline)]/20 overflow-hidden h-full flex flex-col"
  >
    {
      event.bannerUrl ? (
        <img
          src={event.bannerUrl}
          alt={event.title}
          class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
        />
      ) : (
        <div class="w-full h-48 bg-[var(--m3-sys-surface-variant)] flex items-center justify-center text-[var(--m3-sys-on-surface-variant)]">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-12 w-12 opacity-50"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </div>
      )
    }

    <div class="p-5 flex-1 flex flex-col">
      <div class="flex justify-between items-start mb-2">
        <span
          class="inline-block px-2 py-1 text-xs font-semibold rounded-md bg-[var(--m3-sys-primary-container)] text-[var(--m3-sys-on-primary-container)]"
        >
          {event.status === "published" ? "Disponible" : event.status}
        </span>
        <span
          class="text-sm text-[var(--m3-sys-on-surface-variant)] font-medium"
        >
          {event.registeredCount} / {event.capacity}
        </span>
      </div>

      <h3
        class="text-xl font-bold text-[var(--m3-sys-on-surface)] group-hover:text-[var(--m3-sys-primary)] transition-colors mb-2 line-clamp-2"
      >
        {event.title}
      </h3>

      <div
        class="mt-auto space-y-2 text-sm text-[var(--m3-sys-on-surface-variant)]"
      >
        <div class="flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 text-[var(--m3-sys-primary)]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path></svg
          >
          <span>{formatDate(event.startDate)}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 text-[var(--m3-sys-primary)]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
          >
          <span class="truncate">{event.location}</span>
        </div>
      </div>
    </div>
  </article>
</a>
